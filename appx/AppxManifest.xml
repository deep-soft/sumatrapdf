<?xml version="1.0" encoding="UTF-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10">
  <Identity Name="KrzysztofKowalczyk.SumatraPDF" Version="{{VERSION}}" ProcessorArchitecture="x64" Publisher="CN=&quot;Open Source Developer, Krzysztof Kowalczyk&quot;, O=Open Source Developer, L=Kraków, S=małopolskie, C=PL" />
  <Properties>
    <DisplayName>SumatraPDF</DisplayName>
    <PublisherDisplayName>Krysztof Kowalczyk</PublisherDisplayName>
    <Description>PDF, eBook, comic book, XPS reader</Description>
    <Logo>SumatraPDF_StoreLogo_150x150.png</Logo>
  </Properties>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.14316.0" MaxVersionTested="10.0.26100.0" />
  </Dependencies>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
    <Capability Name="internetClient" />
  </Capabilities>

  <Applications>
    <Application Id="SumatraPDF" Executable="SumatraPDF-store.exe" EntryPoint="Windows.FullTrustApplication">

      <uap:VisualElements DisplayName="SumatraPDF" Description="SumatraPDF Reader" Square150x150Logo="SumatraPDF_StoreLogo_150x150.png" Square44x44Logo="SumatraPDF_44x44.png" BackgroundColor="transparent">

        <uap:DefaultTile>
          <uap:ShowNameOnTiles>
            <uap:ShowOn Tile="square150x150Logo" />
          </uap:ShowNameOnTiles>
        </uap:DefaultTile>

      </uap:VisualElements>

      <Extensions>
        <uap3:Extension Category="windows.fileTypeAssociation">
          <uap3:FileTypeAssociation Name="images" Parameters="&quot;%1&quot;">
            <uap:DisplayName>Image File</uap:DisplayName>
            <uap:Logo>fileicon.png</uap:Logo>
            <uap:SupportedFileTypes>
              <uap:FileType>.pdf</uap:FileType>
              <uap:FileType>.mobi</uap:FileType>
              <uap:FileType>.epub</uap:FileType>
              <uap:FileType>.azw</uap:FileType>
              <uap:FileType>.azw3</uap:FileType>
              <uap:FileType>.azw4</uap:FileType>
              <uap:FileType>.fb2</uap:FileType>
              <uap:FileType>.fb2z</uap:FileType>
              <uap:FileType>.cbr</uap:FileType>
              <uap:FileType>.cbz</uap:FileType>
              <uap:FileType>.cb7</uap:FileType>
              <uap:FileType>.cbt</uap:FileType>
              <uap:FileType>.djvu</uap:FileType>
              <uap:FileType>.xps</uap:FileType>
              <uap:FileType>.tga</uap:FileType>
              <uap:FileType>.bmp</uap:FileType>
              <uap:FileType>.gif</uap:FileType>
              <uap:FileType>.jpeg</uap:FileType>
              <uap:FileType>.jpg</uap:FileType>
              <uap:FileType>.png</uap:FileType>
              <uap:FileType>.tif</uap:FileType>
              <uap:FileType>.tiff</uap:FileType>
              <uap:FileType>.jp2</uap:FileType>
            </uap:SupportedFileTypes>
          </uap3:FileTypeAssociation>
        </uap3:Extension>
      </Extensions>

    </Application>
  </Applications>
</Package>
